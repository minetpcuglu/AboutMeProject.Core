@model List<MessageUserDTO>
@{
    ViewData["Title"] = "SendBox";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">SendBox</h4>
            <p class="card-description">
                Add class <code>.table-striped</code>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Receiver Mail
                            </th>
                            <th>
                                Subject
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Details
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {       
                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    @item.ReceiverMail
                                </td>
                                <td>
                                    @item.Subject
                                </td>
                                <td>
                                    @item.Date.ToShortDateString()
                                </td>

                                <td><a href="/User/Message/InBoxMessageDetail/@item.Id" class="btn btn-outline-primary">Message </a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
