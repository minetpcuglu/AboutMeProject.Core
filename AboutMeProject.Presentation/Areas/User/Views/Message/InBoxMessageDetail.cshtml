@model MessageUserDTO
@{
    ViewData["Title"] = "InBoxMessageDetail";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}



<h2>InBox Message Detail</h2>
<br />
<form class="form-group">
    @Html.HiddenFor(x => x.Id)
    <br />
    @Html.Label("Receiver Mail")
    @Html.TextBoxFor(x => x.ReceiverMail, new { @class = "form-control" })
    <br />
    @Html.Label("Receiver Name")
    @Html.TextBoxFor(x => x.ReceiverName, new { @class = "form-control" })
    <br />
    @Html.Label("Content")
    @Html.TextAreaFor(x => x.MessageContent, 10, 3, new { @class = "form-control" })
    <br />

</form>
