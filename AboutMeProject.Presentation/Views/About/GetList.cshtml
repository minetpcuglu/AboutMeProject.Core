@model List<AboutDTO>
@{
    ViewData["Title"] = "GetList";
    Layout = "~/Views/Shared/_CoronaAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">About List</h4>
            <p class="card-description">
                About <code>.table</code>
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <td>#</td>
                            <th> Image  </th>
                            <td>Title</td>
                            <th> Phone </th>
                            <th> Age </th>
                            <th> Mail  </th>
                            <th> Adress </th>

                            <th> Description  </th>
                            <th> Update  </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {


                        <tr>
                            <td>@item.Id</td>
                            <td class="py-2">
                                <img src="@item.ImageUrl" alt="image" />
                            </td>
                            <td>@item.Title</td>
                            <td>@item.Phone</td>
                            <td>@item.Age</td>
                            <td>@item.Mail</td>
                            <td>@item.Adress</td>
                            <td>@item.Description</td>
                            <td><a href="/About/UpdateAbout/@item.Id" class="btn btn-warning"> <b>Update</b></a></td>

                        </tr>
                        }

                    </tbody>


                </table>
                <br />
            </div>
        </div>
    </div>
</div>
