@model AboutDTO
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/Shared/_CoronaAdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <p class="card-description"> Update About  </p>

            <form class="forms-sample" method="post" asp-controller="About" asp-action="UpdateAbout">
                <div asp-validation-summary="All"></div>
                <input type="hidden" name="EducationId" value="@Model.Id" />

                <div class="form-group">
                    <label asp-for="Title"><b>Title: </b>  </label>
                    <input asp-for="Title" class="form-control" value="@Model.Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>

                </div>
        
                <div class="form-group">
                    <label asp-for="Description"><b>Description: </b>  </label>
                    <input asp-for="Description" class="form-control" value="@Model.Description" />
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Phone"><b>Phone: </b>  </label>
                    <input asp-for="Phone" class="form-control" value="@Model.Phone" />
                    <span asp-validation-for="Phone" class="text-danger"></span>

                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Age"><b>Age: </b>  </label>
                    <input asp-for="Age" class="form-control" value="@Model.Age" />
                    <span asp-validation-for="Age" class="text-danger"></span>

                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Adress"><b>Adress: </b>  </label>
                    <input asp-for="Adress" class="form-control" value="@Model.Adress" />
                    <span asp-validation-for="Adress" class="text-danger"></span>

                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Mail"><b>Mail: </b>  </label>
                    <input asp-for="Mail" class="form-control" value="@Model.Mail" />
                    <span asp-validation-for="Mail" class="text-danger"></span>

                </div>
                <br />
                <div class="form-group">
                    <label for="exampleInputName1">Image</label>
                    <input type="text" class="form-control" id="exampleInputName1" name="ImageUrl" value="@Model.ImageUrl">
                </div>
                <br />
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-dark">Cancel</button>
            </form>
        </div>
    </div>
</div>


