@model AboutDTO
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post" asp-controller="About" asp-action="UpdateAbout">
    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="All"></div>
            <input type="hidden" name="AboutId" value="@Model.Id" />
            <div class="form-group">
                <label asp-for="Title"><b> Title: </b>  </label>
                <input asp-for="Title" class="form-control" value="@Model.Title" />
                <span asp-validation-for="Title" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Description"><b>Description: </b>  </label>
                <input asp-for="Description" class="form-control" value="@Model.Description" />
                <span asp-validation-for="Description" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Phone"><b>Phone: </b>  </label>
                <input asp-for="Phone" class="form-control" value="@Model.Phone" />
                <span asp-validation-for="Phone" class="text-danger"></span>

            </div>
            <br />
            <div class="form-group">
                <label asp-for="Age"><b>Age: </b>  </label>
                <input asp-for="Age" class="form-control" value="@Model.Age" />
                <span asp-validation-for="Age" class="text-danger"></span>

            </div>
            <br />
            <div class="form-group">
                <label asp-for="Adress"><b>Adress: </b>  </label>
                <input asp-for="Adress" class="form-control" value="@Model.Adress" />
                <span asp-validation-for="Adress" class="text-danger"></span>

            </div>
            <br />
            <div class="form-group">
                <label asp-for="Mail"><b>Mail: </b>  </label>
                <input asp-for="Mail" class="form-control" value="@Model.Mail" />
                <span asp-validation-for="Mail" class="text-danger"></span>

            </div>
            <br />
            <div class="form-group">
                <label asp-for="ImageUrl"><b>Image: </b>  </label>
                <input asp-for="ImageUrl" class="form-control" value="@Model.ImageUrl" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>

            </div>
            <br />
            <button type="submit" class="btn btn-primary">Update</button>

        </div>
        <br />
    </div>
</form>


