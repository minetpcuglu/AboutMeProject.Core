@model List<ContactDTO>
@{
    ViewData["Title"] = "GetList";
    Layout = "~/Views/Shared/_CoronaAdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Contact List</h4>
            <p class="card-description">
                Contact <code>.table</code>
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <td>#</td>
                            <td>Title</td>
                            <th> Email</th>
                            <th> Phone </th>
                            <th> Description </th>
                            <th> Update  </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {


                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.Email</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Description.Substring(0, item.Description.Substring(0, 20).LastIndexOf(" "))... </td>
                            <td><a href="/ContactSubPlace/UpdateContact/@item.Id" class="btn btn-warning"> <b>Update</b></a></td>

                        </tr>
                        }

                    </tbody>


                </table>
                <br />
            </div>
        </div>
    </div>
</div>


