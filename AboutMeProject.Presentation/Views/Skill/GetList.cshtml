@model List<SkillDTO>
@{
    ViewData["Title"] = "GetList";
    Layout = "~/Views/Shared/_CoronaAdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Skill List</h4>
            <p class="card-description">
                Skill <code>.table</code>
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Value</th>

                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td class="budget">
                                    @item.Title
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="completion mr-2">@item.Value %</span>
                                        <div>
                                            <div class="progress">
                                                <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100" style="width: @item.Value%;"></div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <button type="button" class="btn btn-danger "
                                            onclick="Delete(@item.Id)">
                                        Delete
                                    </button>
                                </td>
                                @*<td><a href="/Skill/DeleteSkill/@item.Id" class="btn btn-warning"> <b>DELETE</b></a></td>*@
                                <td><a href="/Skill/UpdateSkill/@item.Id" class="btn btn-warning"> <b>Update</b></a></td>

                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Skill/AddSkill/" class="btn btn-primary">New Add Skill</a>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script type="text/javascript" src="~/Deletejs/Skill.js"></script>
}
