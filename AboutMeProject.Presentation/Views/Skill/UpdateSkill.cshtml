@model SkillDTO
@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/Shared/_CoronaAdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <p class="card-description"> Update Skill  </p>
            <form class="forms-sample" method="post" asp-controller="Skill" asp-action="UpdateSkill">
                <div class="row">
                    <div class="col-md-12">
                        <div asp-validation-summary="All"></div>
                        <input type="hidden" name="EmployeeId" value="@Model.Id" />
                        <div class="form-group">
                            <label asp-for="Title"><b> Skill Name: </b>  </label>
                            <input asp-for="Title" class="form-control" value="@Model.Title" />
                            <span asp-validation-for="Title" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="Value"><b> Value: </b>  </label>
                            <input asp-for="Value" class="form-control" value="@Model.Value" />
                            <span asp-validation-for="Value" class="text-danger"></span>

                        </div>


                        <button type="submit" class="btn btn-primary">Update</button>

                    </div>
                    <br />
                </div>
            </form>
        </div>
    </div>
</div>

