@model List<PortfolioDTO>
@{
    ViewData["Title"] = "GetList";
    Layout = "~/Views/Shared/_CoronaAdminLayout.cshtml";
}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Portfolio List</h4>
            <p class="card-description">
                List <code>.table</code>
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                         
                            <th>Project</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Value</th>
                            <th>Delete</th>
                            <th>Update</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <a href="#" class="avatar rounded-circle mr-3">
                                            <img alt="Image placeholder" src="@item.Platform">
                                        </a>
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@item.Name</span>
                                        </div>
                                    </div>
                                </th>
                                <td class="budget">
                                    $ @item.Price USD
                                </td>
                                <td>
                                    <span class="badge badge-dot mr-4">
                                        <i class="bg-success"></i>
                                        <span class="status">Completed</span>
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="completion mr-2">@item.Value%</span>
                                        <div>
                                            <div class="progress">
                                                <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100" style="width: @item.Value%;"></div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <button type="button" class="btn btn-danger "
                                            onclick="Deletes(@item.Id)">
                                        Delete
                                    </button>


                                </td>

                                <td><a href="/Portfolio/UpdatePortfolio/@item.Id" class="btn btn-warning"> <b>Update</b></a></td>

                            </tr>
                        }

                    </tbody>


                </table>
                <br />
                <a href="/Portfolio/AddPortfolio/" class="btn btn-primary">New Add Portfolio</a>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script type="text/javascript" src="~/Deletejs/Portfolio.js"></script>
}


