@model List<MessageDTO>
<div class="text-center mb-5">
    <h2 class="marker marker-center">Contact Me</h2>
</div>
<div class="col-md-12" data-aos="zoom-in" data-aos-delay="100">
    <div class="bg-light my-2 p-3 pt-2">
        <form action="/Default/Add/" method="POST">
            <div class="form-group my-2">
                <label for="name" class="form-label fw-bolder">Name</label>
                <input class="form-control" type="text"  id="txtname" name="Name" required>
            </div>
            <div class="form-group my-2">
                <label for="email" class="form-label fw-bolder">Email</label>
                <input class="form-control" type="email"  id="txtemail" name="Mail" required>
            </div>
            <div class="form-group my-2">
                <label for="message" class="form-label fw-bolder">Message</label>
                <textarea class="form-control" style="resize: none;" id="txtmessage" name="Content" rows="4" required></textarea>
            </div>
            <button class="btn btn-primary mt-2" type="submit" id="addSend" name="SaveMessage" href="/Default/Index/">Send</button>
            <button type="submit" id="btnSaveHobby" name="SaveHobby" value="Save Hobby" href="/Hobby/AddHobby/" class="btn btn-outline-success"><b>Hobi Oluştur</b></button>
        </form>
    </div>
</div>


