@model FeatureDTO
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post" asp-controller="Feature" asp-action="UpdateFeature">
    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="All"></div>
            <input type="hidden" name="FeatureId" value="@Model.Id" />
            <div class="form-group">
                <label asp-for="Haeder"><b> Haeder: </b>  </label>
                <input asp-for="Haeder" class="form-control" value="@Model.Haeder" />
                <span asp-validation-for="Haeder" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Name"><b>Name: </b>  </label>
                <input asp-for="Name" class="form-control" value="@Model.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Title"><b>Title: </b>  </label>
                <input asp-for="Title" class="form-control" value="@Model.Title" />
                <span asp-validation-for="Title" class="text-danger"></span>

            </div>
            <br />
            <br />

            <button type="submit" class="btn btn-primary">Update</button>

        </div>
        <br />
    </div>
</form>


