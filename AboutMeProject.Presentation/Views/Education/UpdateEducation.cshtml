@model EducationDTO
@{
    ViewData["Title"] = "UpdateEducation";
    Layout = "~/Views/Shared/_CoronaAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <p class="card-description"> Update Education </p>

            <form class="forms-sample" method="post" asp-controller="Education" asp-action="UpdateEducation">
                <div asp-validation-summary="All"></div>
                <input type="hidden" name="EducationId" value="@Model.Id" />

                <div class="form-group">
                    <label asp-for="SchollName"><b> Scholl Name: </b>  </label>
                    <input asp-for="SchollName" class="form-control" value="@Model.SchollName" />
                    <span asp-validation-for="SchollName" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Section"><b>Section: </b>  </label>
                    <input asp-for="Section" class="form-control" value="@Model.Section" />
                    <span asp-validation-for="Section" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="NoteAvarage"><b>Note Avarage: </b>  </label>
                    <input asp-for="NoteAvarage" class="form-control" value="@Model.NoteAvarage" />
                    <span asp-validation-for="NoteAvarage" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Section"><b>Section: </b>  </label>
                    <input asp-for="Section" class="form-control" value="@Model.Section" />
                    <span asp-validation-for="Section" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Date"><b>Date: </b>  </label>
                    <input asp-for="Date" class="form-control" value="@Model.Date" />
                    <span asp-validation-for="Date" class="text-danger"></span>

                </div>

                <br />
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-dark">Cancel</button>
            </form>
        </div>
    </div>
</div>



