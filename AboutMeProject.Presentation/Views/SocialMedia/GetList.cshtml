@model List<SocialMediaDTO>
@{
    ViewData["Title"] = "GetList";
    Layout = "~/Views/Shared/_CoronaAdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">SocialMedia List</h4>
            <p class="card-description">
                SocialMedia <code>.table</code>
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <td>#</td>
                            <th> Name  </th>
                            <td>URL</td>
                            <th> Update  </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.URL.Substring(0, item.URL.Substring(0, 20).LastIndexOf(" "))...</td>
                                <td><a href="/SocialMedia/UpdateSocialMedia/@item.Id" class="btn btn-warning"> <b>Update</b></a></td>
                            </tr>
                        }

                    </tbody>


                </table>
                <br />
            </div>
        </div>
    </div>
</div>

