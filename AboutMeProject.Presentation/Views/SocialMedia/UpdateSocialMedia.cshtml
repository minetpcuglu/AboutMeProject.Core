@model SocialMediaDTO
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/Shared/_CoronaAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <p class="card-description"> Update Feature </p>

            <form class="forms-sample" method="post" asp-controller="SocialMedia" asp-action="UpdateSocialMedia">
                <div asp-validation-summary="All"></div>
                <input type="hidden" name="FeaturenId" value="@Model.Id" />
                <input type="hidden" name="Icon" value="@Model.Icon" />
                <div class="form-group">
                    <label asp-for="Name"><b>Name: </b>  </label>
                    <input asp-for="Name" class="form-control" value="@Model.Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="URL"><b>URL: </b>  </label>
                    <input asp-for="URL" class="form-control" value="@Model.URL" />
                    <span asp-validation-for="URL" class="text-danger"></span>

                </div>
                <br />
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-dark">Cancel</button>
            </form>
        </div>
    </div>
</div>

